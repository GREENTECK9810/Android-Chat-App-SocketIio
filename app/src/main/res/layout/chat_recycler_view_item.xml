<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/sender_message_shape"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/send_message_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        android:layout_alignParentRight="true"
        android:background="@drawable/sender_message_shape_first"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/send_message_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        android:layout_alignParentRight="true"
        android:background="@drawable/sender_message_shape_middle"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/send_message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        android:layout_alignParentRight="true"
        android:background="@drawable/sender_message_shape_last"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/recieve_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/receiver_message_shape"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/recieve_message_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello crixus"
        android:layout_alignParentLeft="true"
        android:background="@drawable/receiver_message_shape_first"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/recieve_message_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello crixus"
        android:layout_alignParentLeft="true"
        android:background="@drawable/receiver_message_shape_middle"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/recieve_message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello crixus"
        android:layout_alignParentLeft="true"
        android:background="@drawable/receiver_message_shape_last"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:visibility="gone"/>



</RelativeLayout>